<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hibernate.client.ClientTableEntity" table="client_table" schema="hotel_system">
        <id name="clientId">
            <column name="client_id" sql-type="bigint(255)"/>
        </id>
        <property name="clientName">
            <column name="client_name" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="clientSex">
            <column name="client_sex" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="clientOrderId">
            <column name="client_order_id" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>