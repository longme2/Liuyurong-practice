<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hibernate.admin.AdminTableEntity" table="admin_table" schema="hotel_system">
        <id name="account">
            <column name="account" sql-type="int(255)"/>
        </id>
        <property name="password">
            <column name="password" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="jurisdiction">
            <column name="jurisdiction" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>